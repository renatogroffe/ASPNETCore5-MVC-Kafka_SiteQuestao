@{
    ViewData["Title"] = "Pesquisa";
}

<div class="text-center">
    <h3>Testes com Kafka</h3>
    <h5>Qual tecnologia você pretende estudar mais em breve?</h5>
    <br/>
    @Html.ActionLink("Azure DevOps", "VotoAzureDevOps", "Votacao", null, new { @class = "btn btn-primary btn-xs" })
    @Html.ActionLink("GitHub Actions", "VotoGitHubActions", "Votacao", null, new { @class = "btn btn-success btn-xs" })
    @Html.ActionLink("Terraform", "VotoTerraform", "Votacao", null, new { @class = "btn btn-info btn-xs" })
    @Html.ActionLink("Kubernetes", "VotoKubernetes", "Votacao", null, new { @class = "btn btn-danger btn-xs" })

    @if (!String.IsNullOrWhiteSpace((string)TempData["Voto"]))
    {
        <br/><br/>
        <p>Obrigado pelo seu voto: <b>@TempData["Voto"]</b></p>
    }
</div>